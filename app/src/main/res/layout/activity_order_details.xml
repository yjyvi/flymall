<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--有地址的-->
            <RelativeLayout
                android:id="@+id/rl_select_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_15"
                android:layout_marginRight="@dimen/dm_15"
                android:layout_marginTop="@dimen/dm_15"
                android:background="@color/withe"
                android:orientation="vertical"
                android:padding="@dimen/dm_10">

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="@dimen/dm_14"
                    android:layout_height="@dimen/dm_17"
                    android:background="@mipmap/icon_location_gray"/>

                <TextView
                    android:id="@+id/tv_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_8"
                    android:layout_toRightOf="@id/img_2"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Receiver：Amazon Customer"
                    android:textSize="@dimen/dm_15"/>

                <TextView
                    android:id="@+id/tv_address_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_address_name"
                    android:layout_marginLeft="@dimen/dm_100"
                    android:text="13999998888"
                    android:textSize="@dimen/dm_15"/>

                <TextView
                    android:id="@+id/tv_address_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_address_tel"
                    android:layout_marginLeft="@dimen/dm_20"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="No.16, Basic Surface of Jianghan Road, Qiaokou District, Wuhan City, Hubei Province"
                    android:textSize="@dimen/dm_15"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_goods_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginLeft="@dimen/dm_15"
                    android:layout_marginRight="@dimen/dm_15"
                    android:layout_marginTop="@dimen/dm_15"
                    android:background="@color/withe"/>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_15"
                android:layout_marginRight="@dimen/dm_15"
                android:layout_marginTop="@dimen/dm_15"
                android:background="@color/withe"
                android:orientation="vertical"
                android:padding="@dimen/dm_10">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order number:0000098956"
                        android:textColor="@color/normal_gray"
                        android:textSize="@dimen/dm_15"/>

                    <TextView
                        android:id="@+id/tv_order_number_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_buy_selector"
                        android:paddingBottom="@dimen/dm_3"
                        android:paddingLeft="@dimen/dm_10"
                        android:paddingRight="@dimen/dm_10"
                        android:paddingTop="@dimen/dm_3"
                        android:text="Copy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dm_15"/>
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_time"
                    android:paddingBottom="@dimen/dm_10"
                    android:text="Order time:2018.07.01 15:12"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/dm_15"/>


                <include layout="@layout/common_line"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dm_5"
                    android:id="@+id/tv_order_type"
                    android:paddingTop="@dimen/dm_10"
                    android:text="Mode of payment:Alipay"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/dm_15"/>

                <TextView
                    android:id="@+id/tv_order_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dm_5"
                    android:paddingTop="@dimen/dm_5"
                    android:text="Total Purchases:$656.55"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/dm_15"/>

                <TextView
                    android:id="@+id/tv_order_freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dm_15"
                    android:paddingTop="@dimen/dm_5"
                    android:text="Freight :exemption from postage"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/dm_15"/>

                <include layout="@layout/common_line"/>

                <TextView
                    android:id="@+id/tv_order_pay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dm_10"
                    android:paddingTop="@dimen/dm_15"
                    android:text="Has to pay the amount:$656"
                    android:textColor="@color/good_price_red"
                    android:textSize="@dimen/dm_15"/>



            </LinearLayout>
            <TextView
                android:id="@+id/tv_skype"
                android:paddingLeft="@dimen/dm_10"
                android:paddingRight="@dimen/dm_10"
                android:background="@color/withe"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/dm_10"
                android:layout_marginLeft="@dimen/dm_15"
                android:layout_marginRight="@dimen/dm_15"
                android:layout_marginTop="@dimen/dm_10"
                android:drawablePadding="@dimen/dm_5"
                android:drawableLeft="@mipmap/icon_skype"
                android:text="skype us:65323215"
                android:paddingTop="@dimen/dm_10"
                android:paddingBottom="@dimen/dm_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_50"
        android:background="@color/withe"
        android:id="@+id/ll_bottom"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_buy_selector"
            android:paddingBottom="@dimen/dm_5"
            android:paddingLeft="@dimen/dm_10"
            android:paddingRight="@dimen/dm_10"
            android:paddingTop="@dimen/dm_5"
            android:text="Cancel"
            android:textSize="@dimen/dm_15"/>

        <TextView
            android:id="@+id/tv_pay_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_20"
            android:layout_marginRight="@dimen/dm_15"
            android:background="@drawable/normal_rect"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="@dimen/dm_5"
            android:paddingLeft="@dimen/dm_10"
            android:paddingRight="@dimen/dm_10"
            android:paddingTop="@dimen/dm_5"
            android:text="Pay now"
            android:textSize="@dimen/dm_15"/>
    </LinearLayout>
</LinearLayout>