<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dm_100"
    android:gravity="center_vertical"
    android:background="@color/withe"
    android:orientation="vertical"
    android:padding="@dimen/dm_10"
    android:paddingBottom="@dimen/dm_10"
    android:paddingTop="@dimen/dm_10">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:id="@+id/iv_goods_img"
        android:layout_width="@dimen/dm_82"
        android:layout_height="@dimen/dm_82"
        android:src="@color/normal_gray"/>


    <TextView
        android:id="@+id/tv_goods_name"
        android:lines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_5"
        android:layout_toRightOf="@id/iv_goods_img"
        android:textColor="@color/black"
        android:textSize="@dimen/dm_15"/>

    <TextView
        android:id="@+id/tv_goods_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_name"
        android:layout_marginLeft="@dimen/dm_5"
        android:layout_marginTop="@dimen/dm_3"
        android:layout_toRightOf="@id/iv_goods_img"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/dm_15"/>


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dm_5"
        android:layout_marginRight="@dimen/dm_9"
        android:layout_toRightOf="@id/iv_goods_img"
        android:textColor="@color/normal_red"
        android:textSize="@dimen/dm_15"/>


    <TextView
        android:id="@+id/tv_good_evaluate"
        android:textSize="@dimen/dm_15"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginLeft="@dimen/dm_20"
        android:background="@drawable/normal_rect"
        android:paddingTop="@dimen/dm_5"
        android:paddingBottom="@dimen/dm_5"
        android:paddingLeft="@dimen/dm_10"
        android:paddingRight="@dimen/dm_10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dm_10"
        android:text="Evaluate"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</RelativeLayout>