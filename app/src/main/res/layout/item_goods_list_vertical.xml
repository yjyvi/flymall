<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dm_100"
    android:gravity="center_vertical"
    android:background="@color/withe"
    android:orientation="vertical"
    android:padding="@dimen/dm_10"
    android:paddingBottom="@dimen/dm_10"
    android:paddingTop="@dimen/dm_10">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:id="@+id/iv_goods_img"
        android:layout_width="@dimen/dm_82"
        android:layout_height="@dimen/dm_82"
        android:layout_below="@id/line"
        android:src="@color/normal_gray"/>


    <TextView
        android:id="@+id/tv_goods_name"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginLeft="@dimen/dm_5"
        android:layout_toRightOf="@id/iv_goods_img"
        android:textColor="@color/black"
        android:textSize="@dimen/dm_14"/>

    <TextView
        android:id="@+id/tv_goods_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_name"
        android:layout_marginLeft="@dimen/dm_5"
        android:layout_marginTop="@dimen/dm_3"
        android:layout_toRightOf="@id/iv_goods_img"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/dm_14"/>


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dm_5"
        android:layout_marginRight="@dimen/dm_9"
        android:layout_toRightOf="@id/iv_goods_img"
        android:textColor="@color/normal_red"
        android:textSize="@dimen/dm_14"/>

    <TextView
        android:id="@+id/tv_order_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dm_10"
        android:textColor="@color/black"
        android:textSize="@dimen/dm_14"/>


</RelativeLayout>