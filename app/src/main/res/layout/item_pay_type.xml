<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dm_50"
              android:gravity="center_vertical"
              android:background="@color/withe"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/dm_15"
              android:paddingRight="@dimen/dm_15">


    <ImageView
        android:src="@mipmap/icon_wx_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="@dimen/dm_20"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="WeChat Pay"
        android:textColor="@color/black"
        android:textSize="@dimen/dm_12"/>

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="@dimen/dm_20"
        android:layout_height="@dimen/dm_20"
        android:background="@drawable/select_cart"/>
</LinearLayout>