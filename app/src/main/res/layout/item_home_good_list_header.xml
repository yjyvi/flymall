<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/withe"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/withe"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dm_5"
        android:layout_height="@dimen/dm_53">

        <TextView
            android:id="@+id/tv_sale_name"
            android:textStyle="bold"
            android:paddingLeft="@dimen/dm_15"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dm_14"
            android:paddingTop="@dimen/dm_14"
            android:text="LIMITED TIME SALE"
            android:textSize="@dimen/dm_16"/>

        <TextView
            android:id="@+id/tv_more"
            android:textSize="@dimen/dm_15"
            android:padding="@dimen/dm_15"
            android:layout_width="wrap_content"
            android:text="+ MORE"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:background="@color/back_gray"
        android:id="@+id/rv_goods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>