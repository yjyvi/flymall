<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <TextView
        android:layout_marginLeft="@dimen/dm_10"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:text="Polyester"
        android:paddingLeft="@dimen/dm_10"
        android:paddingTop="@dimen/dm_5"
        android:paddingBottom="@dimen/dm_5"
        android:background="@color/normal_color"
        android:textColor="@color/black"
        android:paddingRight="@dimen/dm_10"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/tv_content"
        android:layout_marginLeft="-8dp"
        android:src="@mipmap/icon_close"
        android:layout_width="@dimen/dm_8"
        android:layout_height="@dimen/dm_8"/>

