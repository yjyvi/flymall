<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dm_15"
    android:layout_marginRight="@dimen/dm_15"
    android:layout_marginTop="@dimen/dm_9"
    android:background="@color/withe"
    android:orientation="vertical"
    android:padding="@dimen/dm_10">

    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Number:5698966653"
        android:textColor="@color/black"
        android:textSize="@dimen/dm_15"/>

    <TextView
        android:id="@+id/tv_order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="UNPAID"
        android:textColor="#FFC700"
        android:textSize="@dimen/dm_15"/>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_order_no"
        android:layout_marginTop="@dimen/dm_10"
        android:background="@color/common_line"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_goods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"/>

    <TextView
        android:layout_marginTop="@dimen/dm_5"
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dm_15"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rv_goods_list"
        android:text="Total:$99"
        android:textColor="@color/good_price_red"/>

    <TextView
        android:layout_marginTop="@dimen/dm_5"
        android:id="@+id/tv_total_num"
        android:layout_width="wrap_content"
        android:textSize="@dimen/dm_15"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_goods_list"
        android:text="A total of 5 products"/>


    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
         android:layout_below="@id/rv_goods_list"
        android:layout_marginTop="@dimen/dm_35"
        android:background="@color/common_line"/>


    <LinearLayout
        android:layout_below="@id/line3"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dm_15"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <TextView
            android:background="@drawable/item_buy_selector"
            android:id="@+id/tv_cancel"
            android:paddingTop="@dimen/dm_5"
            android:paddingBottom="@dimen/dm_5"
            android:paddingLeft="@dimen/dm_10"
            android:paddingRight="@dimen/dm_10"
            android:text="Cancel"
            android:textSize="@dimen/dm_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_order_pay"
            android:textSize="@dimen/dm_15"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="@dimen/dm_20"
            android:background="@drawable/normal_rect"
            android:paddingTop="@dimen/dm_5"
            android:paddingBottom="@dimen/dm_5"
            android:paddingLeft="@dimen/dm_10"
            android:paddingRight="@dimen/dm_10"
            android:text="Pay now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</RelativeLayout>